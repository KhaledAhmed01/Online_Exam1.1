@model Online_Exam.Models.Exam

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Exam_title"></label>
        <input asp-for="Exam_title" class="form-control" />
        <span asp-validation-for="Exam_title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Start_time"></label>
        <input asp-for="Start_time" class="form-control" />
        <span asp-validation-for="Start_time" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IS_shuffle_Q">Shuffle Questions:</label>
        <div class="form-check">
            <input asp-for="IS_shuffle_Q" class="form-check-input" type="radio" value="true" id="shuffleQTrue" checked>
            <label class="form-check-label" for="shuffleQTrue">True</label>
        </div>
        <div class="form-check">
            <input asp-for="IS_shuffle_Q" class="form-check-input" type="radio" value="false" id="shuffleQFalse">
            <label class="form-check-label" for="shuffleQFalse">False</label>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="IS_shuffle_A">Shuffle Answers:</label>
        <div class="form-check">
            <input asp-for="IS_shuffle_A" class="form-check-input" type="radio" value="true" id="shuffleATrue" checked>
            <label class="form-check-label" for="shuffleATrue">True</label>
        </div>
        <div class="form-check">
            <input asp-for="IS_shuffle_A" class="form-check-input" type="radio" value="false" id="shuffleAFalse">
            <label class="form-check-label" for="shuffleAFalse">False</label>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>
